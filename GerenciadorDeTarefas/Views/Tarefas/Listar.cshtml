@model IEnumerable<GerenciadorDeTarefas.Models.Tarefa>

@{
    ViewBag.Title = "Listar";
}

<h3 class="mt-3">Listagem de Tarefas</h3>

<p>
    @Html.ActionLink("Inserir Nova Tarefa", "Inserir", null, new { @class = "btn btn-success" })
</p>

<div>
    <div class="card bg-light mb-3">
        @foreach (var item in Model)
        {
            <div class="card-header">
                @Html.DisplayFor(modelItem => item.Titulo)
            </div>
            <div class="card-body">
                <p class="card-text"> @Html.DisplayFor(modelItem => item.Descricao)</p>

                @if (item.DataExpiracao >= DateTime.Now)
                {
                    <p class="card-text">  @Html.DisplayFor(modelItem => item.DataExpiracao)</p>
                    <p style="color:green">Em dia</p>
                }
                else
                {
                    <p class="card-text">  @Html.DisplayFor(modelItem => item.DataExpiracao)</p>
                    <p style="color:red">Atrasada</p>
                }


            </div>
            <div class="card-footer bg-light">
                <p>
                    @Html.ActionLink("Alterar", "Alterar", new { id = item.Id }, new { @class = "btn btn-primary"}) |
                    @Html.ActionLink("Excluir", "Excluir", new { id = item.Id }, new { @class = "btn btn-danger"}) 
                 
                </p>
            </div>
        }

    </div>

</div>
